{
  "version": 2,
  "outputDirectory": "dist",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "ignoreFunctionFolders": [
    "api/routes",
    "api/lib"
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp)$",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ]
}